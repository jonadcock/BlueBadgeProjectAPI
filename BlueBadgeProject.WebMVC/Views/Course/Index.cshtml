    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CourseId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LocationCity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LocationState)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseLength)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CoursePar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseRating)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CourseId }) |
            @Html.ActionLink("Details", "Detail", new { id=item.CourseId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CourseId })
