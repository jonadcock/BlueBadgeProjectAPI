@model IEnumerable<BlueBadge.Models.CourseModels.CourseListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Courses</h2>

<p>
    @Html.ActionLink("Add Course", "Create")
    <br/>
    @Html.ActionLink("Rate Your Round", "Create", "CourseRating", null, null)

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourseId)
        </th>
